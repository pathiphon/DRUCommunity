<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        style="@style/RelativeLayout"
        tools:context=".LoginActivity">

    <LinearLayout
            android:id="@+id/mLogin"
            style="@style/LinearLayoutVertical"
            android:layout_margin="@dimen/login"
            android:padding="@dimen/layout">

        <ImageView
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:src="@drawable/ic_dru" />

        <TextView
                style="@style/TextViewLarge"
                android:text="@string/app_name" />

        <com.google.android.material.textfield.TextInputLayout style="@style/MatchWrap">

            <EditText
                    android:id="@+id/mEdtEmail"
                    style="@style/EditTextEmail"
                    android:hint="@string/e_mail" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout style="@style/MatchWrap">

            <EditText
                    android:id="@+id/mEdtPassword"
                    style="@style/EditTextPassword"
                    android:hint="@string/password" />
        </com.google.android.material.textfield.TextInputLayout>

        <LinearLayout
                style="@style/LinearLayoutHorizontal"
                android:padding="@dimen/layout">

            <Button
                    android:id="@+id/mBtnReg"
                    style="@style/Button"
                    android:layout_marginTop="@dimen/zero"
                    android:text="@string/register" />

            <Button
                    android:id="@+id/mBtnLogin"
                    style="@style/Button"
                    android:layout_marginStart="@dimen/layout"
                    android:layout_marginTop="@dimen/zero"
                    android:text="@string/login" />
        </LinearLayout>

        <TextView
                android:id="@+id/mTvForgotPassword"
                style="@style/TextViewSmall"
                android:layout_gravity="start"
                android:text="@string/forgot_your_password" />
    </LinearLayout>

    <ProgressBar
            android:id="@+id/mProgressBar"
            style="@style/ProgressBar" />
</RelativeLayout>
