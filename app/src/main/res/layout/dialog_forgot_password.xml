<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        style="@style/RelativeLayoutDialog">

    <LinearLayout style="@style/LinearLayoutVertical">

        <android.support.design.widget.TextInputLayout style="@style/MatchWrap">

            <EditText
                    android:id="@+id/mEdtEmail"
                    style="@style/EditTextEmail"
                    android:hint="@string/e_mail" />
        </android.support.design.widget.TextInputLayout>

        <Button
                android:id="@+id/mBtnReset"
                style="@style/Button"
                android:text="@string/reset" />
    </LinearLayout>

    <ProgressBar
            android:id="@+id/mProgressBar"
            style="@style/ProgressBar" />
</RelativeLayout>
