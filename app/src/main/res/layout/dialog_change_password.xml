<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        style="@style/RelativeLayoutDialog">

    <LinearLayout style="@style/LinearLayoutVertical">

        <android.support.design.widget.TextInputLayout style="@style/MatchWrap">

            <EditText
                    android:id="@+id/mEdtOldPassword"
                    style="@style/EditTextPassword"
                    android:hint="@string/old_password" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout style="@style/MatchWrap">

            <EditText
                    android:id="@+id/mEdtNewPassword"
                    style="@style/EditTextPassword"
                    android:hint="@string/new_password" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout style="@style/MatchWrap">

            <EditText
                    android:id="@+id/mEdtRePassword"
                    style="@style/EditTextPassword"
                    android:hint="@string/re_password" />
        </android.support.design.widget.TextInputLayout>

        <Button
                android:id="@+id/mBtnChangePassword"
                style="@style/Button"
                android:text="@string/change_password" />
    </LinearLayout>

    <ProgressBar
            android:id="@+id/mProgressBar"
            style="@style/ProgressBar" />
</RelativeLayout>
