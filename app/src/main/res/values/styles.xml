<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="MatchWrap">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="WrapWrap">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="WrapMatch">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="MatchMatch">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="RelativeLayout" parent="MatchMatch">
        <item name="android:background">@drawable/shape_bg</item>
        <item name="android:gravity">center</item>
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">true</item>
        <item name="android:padding">@dimen/layout</item>
    </style>

    <style name="RelativeLayoutDialog" parent="RelativeLayout">
        <item name="android:background">@android:color/white</item>
    </style>

    <style name="LinearLayoutVertical" parent="MatchWrap">
        <item name="android:gravity">center</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="LinearLayoutHorizontal" parent="LinearLayoutVertical">
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="ProgressBar" parent="WrapWrap">
        <item name="android:visibility">invisible</item>
        <item name="android:layout_centerInParent">true</item>
    </style>

    <style name="Button" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/layout</item>
        <item name="android:background">@drawable/shape_gold_frame</item>
        <item name="android:layout_marginTop">@dimen/layout</item>
    </style>

    <style name="ButtonMatch" parent="Button">
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="EditText" parent="MatchWrap">
        <item name="android:maxLines">1</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:background">@drawable/shape_edit</item>
        <!--<item name="android:inputType">textFilter</item>-->
        <!--<item name="android:digits">ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz1234567890</item>-->
    </style>

    <style name="EditTextEmail" parent="EditText">
        <item name="android:inputType">textEmailAddress</item>
    </style>

    <style name="EditTextPassword" parent="EditText">
        <item name="android:inputType">textPassword</item>
    </style>

    <style name="ImageView">
        <item name="android:layout_width">@dimen/image</item>
        <item name="android:layout_height">@dimen/image</item>
        <item name="android:src">@drawable/ic_user</item>
    </style>

    <style name="ImageViewState">
        <item name="android:layout_width">@dimen/state</item>
        <item name="android:layout_height">@dimen/state</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:visibility">visible</item>
        <item name="android:src">@drawable/shape_state_red</item>
    </style>

    <style name="TextView" parent="WrapWrap">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
    </style>

    <style name="TextViewLarge" parent="TextView">
        <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextViewSmall" parent="TextView">
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
    </style>

    <style name="RecyclerView" parent="MatchMatch">
        <item name="android:background">@color/gray</item>
    </style>

    <style name="FloatingActionButton" parent="WrapWrap">
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_margin">@dimen/layout</item>
    </style>

</resources>
